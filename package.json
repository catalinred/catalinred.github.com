{
  "name": "red",
  "version": "1.0.0",
  "description": "A set of build tasks with npm scripts.",
  "scripts": {
    "autoprefixer": "postcss -u -x autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css/ src/sass/",
    "uglify": "mkdirp dist/js && uglifyjs src/js/common.js -m -c -o dist/js/common.js",
    "imagemin": "imagemin src/img/* --out-dir=dist/img",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run uglify",
    "build:all": "npm run build:css && npm run build:js && npm run imagemin && bundle exec jekyll serve"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "uglify-js": "^3.0.28",
    "imagemin-cli": "^3.0.0"
  }
}
